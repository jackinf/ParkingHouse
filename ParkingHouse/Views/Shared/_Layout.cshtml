<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="header">
        <div class="title">PARKING HOUSE   
            <div class="sum">Cars currently parking: @ViewBag.Cars (500)</div> 
            <div class="sum">Current profit: @String.Format("{0:C}", @ViewBag.Sum)</div>
                   
        </div>
        
    </div>
        
    <div id="sidebar">
        @RenderSection("Add")
        @RenderSection("EndSimulation")
    </div>
    <div id="content">
        @if (TempData["message"] != null)
        {
            <div class="Message">@TempData["message"]</div>
        }
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
